<html>
  <head>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>
    <style>
      #map {
        height: 500px;
      }
    </style>
  </head>
  <body>
    <h1>Locations</h1>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Timestamp</th>
          <th>Lat</th>
          <th>Lng</th>
          <th>Alt</th>
        </tr>
      </thead>
      <tbody>
        {{ range $v := .Locations }}
        <tr>
          <td>{{ $v.Id }}</td>
          <td>{{ $v.Username }}</td>
          <td>{{ $v.Created.Format "2006-01-02 15:04" }}</td>
          <td>{{ $v.Lat }}</td>
          <td>{{ $v.Lng }}</td>
          <td>{{ $v.Alt }}</td>
        </tr>
        {{
          end
        }}
      </tbody>
    </table>
    <hr />
    <div id="map"></div>
    <script>
      var locations = [
        {{ range $v := .Locations }}[{{$v.Lat}},{{$v.Lng}}],{{end}}
      ]

      var map = L.map('map').setView(locations.at(0), 13);
      L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
      }).addTo(map);

      locations.forEach(x => {
        L.circle(x, {
          color: "blue",
          radius: 5
        }).addTo(map)
      })
    </script>
  </body>
</html>
